{
  "name": "mjml-chart",
  "description": "mjml-chart",
  "version": "1.5.0",
  "main": "lib/index.js",
  "scripts": {
    "ci": "npm run --silent update-swagger && npm run --silent update && npm run --silent test && npm run --silent updtr && npm run release",
    "release": "(git commit -a -m 'prepare for release' || true) && (npm-release $(cat ./scripts/swagger.json| jq.node 'get(\"info.version\")') || true) && (git push origin master:master || true)",
    "updtr-commit": "npm run --silent updtr && (git add package.json && git commit -m 'update deps' || true)",
    "updtr": "updtr",
    "test": "mocha --compilers js:babel-register",
    "test-watch": "mocha -w --compilers js:babel-register",
    "update-swagger": "curl -s https://image-charts.com/swagger.json > scripts/swagger.json",
    "update-swagger-dev": "curl -s http://localhost:8080/swagger.json > scripts/swagger.json",
    "update": "node scripts/generateREADME.js > README.md && node scripts/generateComponent.js > src/index.js && babel src/index.js > lib/index.js",
    "update-watch": "chokidar 'scripts/**' 'package.json' -c 'npm run update'",
    "example-html": "babel-node examples/simple-chart.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/image-charts/mjml-chart.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/image-charts/mjml-chart/issues"
  },
  "imageCharts": {
    "documentation": "https://image-charts.com/documentation",
    "api": "https://image-charts.com/chart"
  },
  "homepage": "https://github.com/image-charts/mjml-chart",
  "dependencies": {
    "lodash": "^4.17.4",
    "mjml-core": "^3.3.0",
    "mjml-image": "^3.3.0",
    "react": "^15.4.2"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "babel-register": "^6.24.0",
    "chai": "^3.5.0",
    "chokidar-cli": "^1.2.0",
    "jq.node": "^1.0.0",
    "markdown-table": "^1.1.0",
    "mjml": "^3.3.0",
    "mjml-cli": "^3.3.0",
    "mocha": "^3.2.0",
    "npm-release": "^1.0.0",
    "truncate": "^2.0.0",
    "updtr": "^0.2.3"
  }
}
